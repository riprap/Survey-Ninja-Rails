<h1>All Surveys</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
  <% @surveys.each do |survey| %>
  	<tr>
  		<td><%= survey.title %></td>
  		<td><%= survey.description %></td>
  		<td><%= link_to 'Show', survey_path(survey) %></td>
  		<td><%= link_to 'Edit', edit_survey_path(survey) %></td>
  		<td><%= link_to 'Delete', survey_path(survey), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  	</tr>
  <% end %>
</table>